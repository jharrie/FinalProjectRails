<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Addr</th>
      <th>City</th>
      <th>Prov</th>
      <th>Postal</th>
      <th>Login</th>
      <th>Pass</th>
      <th>Staff</th>
      <th>Apptdate</th>
      <th>Healthid</th>
      <th>Cart</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.fname %></td>
        <td><%= customer.lname %></td>
        <td><%= customer.addr %></td>
        <td><%= customer.city %></td>
        <td><%= customer.prov %></td>
        <td><%= customer.postal %></td>
        <td><%= customer.login %></td>
        <td><%= customer.pass %></td>
        <td><%= customer.staff_id %></td>
        <td><%= customer.apptdate %></td>
        <td><%= customer.healthid %></td>
        <td><%= customer.cart_id %></td>
        <td><%= customer.phone %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>