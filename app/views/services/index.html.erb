<p id="notice"><%= notice %></p>

<h1>Services</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Discount</th>
      <th>Discount amount</th>
      <th>Length</th>
      <th>Cart</th>
      <th>Staff</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.price %></td>
        <td><%= service.discount %></td>
        <td><%= service.discount_amount %></td>
        <td><%= service.length %></td>
        <td><%= service.cart_id %></td>
        <td><%= service.staff_id %></td>
        <td><%= link_to 'Show', service %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Service', new_service_path %>
