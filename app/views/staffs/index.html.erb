<p id="notice"><%= notice %></p>

<h1>Staffs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Apptdate</th>
      <th>Rate</th>
      <th>Fname</th>
      <th>Lname</th>
      <th>Address</th>
      <th>City</th>
      <th>Postal</th>
      <th>Phone</th>
      <th>Service</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.title %></td>
        <td><%= staff.apptdate %></td>
        <td><%= staff.rate %></td>
        <td><%= staff.fname %></td>
        <td><%= staff.lname %></td>
        <td><%= staff.address %></td>
        <td><%= staff.city %></td>
        <td><%= staff.postal %></td>
        <td><%= staff.phone %></td>
        <td><%= staff.service_id %></td>
        <td><%= staff.customer_id %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

