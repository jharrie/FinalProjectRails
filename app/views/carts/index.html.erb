<p id="notice"><%= notice %></p>

<h1>Carts</h1>

<table>
  <thead>
    <tr>
      <th>Total</th>
      <th>Balance</th>
      <th>Itemtotal</th>
      <th>Customer</th>
      <th>Product</th>
      <th>Service</th>
      <th>Pst</th>
      <th>Gst</th>
      <th>Hst</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.total %></td>
        <td><%= cart.balance %></td>
        <td><%= cart.itemtotal %></td>
        <td><%= cart.customer_id %></td>
        <td><%= cart.product_id %></td>
        <td><%= cart.service_id %></td>
        <td><%= cart.pst %></td>
        <td><%= cart.gst %></td>
        <td><%= cart.hst %></td>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

